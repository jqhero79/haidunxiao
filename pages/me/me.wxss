.userInfo, .infoView{
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.name{
    font-weight: 600;
    font-size: 40rpx;
    color: #000000;
}
.avatar{
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    margin-bottom: 48rpx;
}
.textView{
	font-size: 24rpx;
	color: #999999;
	margin-top: 10rpx;
}

.btnInfo{
	width: 510rpx;
	color:#fff;
	background: #3ABF39;
	border-radius: 200rpx;
	text-align: center;
	margin-top: 10rpx;
}
